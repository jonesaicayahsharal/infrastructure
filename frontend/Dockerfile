# Build stage
FROM node:20-alpine AS build

WORKDIR /app

RUN corepack enable

COPY package.json ./
RUN yarn install

COPY . .
RUN yarn build

# Production stage
FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html
COPY nginx.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
